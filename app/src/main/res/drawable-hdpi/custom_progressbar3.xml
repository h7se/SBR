<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:id="@android:id/background">

    <shape>
       <corners android:radius="0dip" />
       <gradient
        android:startColor="#ff2A2D30"
        android:centerColor="#ff2A2D30"
        android:endColor="#ff2A2D30" />
    </shape>
  </item>
  <item android:id="@android:id/secondaryProgress">
    <clip>
       <shape>
        <corners android:radius="0dip" />
        <gradient
             android:startColor="#77ff7500"
             android:endColor="#77ffff00"/>
       </shape>
    </clip>
  </item>
  <item android:id="@android:id/progress">
    <clip>
       <shape>
        <corners android:radius="0dip" />
        <gradient
             android:startColor="#77007500"
             android:endColor="#7700ff00" />
       </shape>
    </clip>
  </item>
</layer-list>